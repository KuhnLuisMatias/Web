@model Web.ViewModels.ProductosViewModel

<div class="modal" tabindex="-1" id="productoModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("GuardarProducto", "Productos", FormMethod.Post,new { enctype="multipart/form-data"}))
                {
                    @Html.HiddenFor(x=>x.Id)
                    @Html.HiddenFor(x=>x.Imagen)

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Imagen</label>
                            @Html.EditorFor(x=>x.Imagen_Archivo,new{htmlAttributes = new{@class="col-md8 form-control"}})
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Descripcion</label>
                            @Html.EditorFor(x=>x.Descripcion,new{htmlAttributes = new{@class="col-md8 form-control"}})
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Stock</label>
                            @Html.EditorFor(x=>x.Stock,new{htmlAttributes = new{@class="col-md8 form-control"}})
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Precio</label>
                            @Html.EditorFor(x=>x.Precio,new{htmlAttributes = new{@class="col-md8 form-control"}})
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-control-label">Activo</label>
                            @Html.CheckBoxFor(x=>x.Activo,new{htmlAttributes = new{@class="col-md8 form-control"}})
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>