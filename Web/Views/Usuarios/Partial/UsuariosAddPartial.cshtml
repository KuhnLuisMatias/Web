@model Web.ViewModels.UsuariosViewModel

<div class="modal" tabindex="-1" id="usuarioModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                @using (Html.BeginForm("GuardarUsuario", "Usuarios", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.HiddenFor(x=>x.Id)

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-contusuario-label">Nombre</label>
                            @Html.EditorFor(x=>x.Nombre,new{htmlAttributes = new{@class="col-md8 form-contusuario"}})
                        </div>
                    </div>

                     <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-contusuario-label">Apellido</label>
                            @Html.EditorFor(x=>x.Apellido,new{htmlAttributes = new{@class="col-md8 form-contusuario"}})
                        </div>
                    </div>

                     <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-contusuario-label">Mail</label>
                            @Html.EditorFor(x=>x.Mail,new{htmlAttributes = new{@class="col-md8 form-contusuario"}})
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-contusuario-label">Clave</label>
                            @Html.EditorFor(x=>x.Clave,new{htmlAttributes = new{@class="col-md8 form-contusuario"}})
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-contusuario-label">Activo</label>
                            @Html.CheckBoxFor(x=>x.Activo,new{htmlAttributes = new{@class="col-md8 form-contusuario"}})
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-contusuario-label">Fecha Nacimiento</label>
                            @Html.EditorFor(x=>x.Fecha_Nacimiento,new{htmlAttributes = new{@class="col-md8 form-contusuario"}})
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mt-1 mb-3">
                            <label class="col-md-4 form-contusuario-label">Rol</label>
                            <select name="Id_Rol" id="Id_Rol" required class="col-md-9 form-control">
                                <option value="">Selecciona...</option>
                                @{
                                    foreach (var item in Model.Lista_Roles)
                                    {
                                        if (Model.Id_Rol != null && item.Value == Model.Id_Rol.ToString())
                                        {
                                            <option value=@item.Value selected>item.Text</option>
                                        }
                                        else
                                        {
                                            <option value=@item.Value>@item.Text</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-success" id="btnGuardar">Guardar</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>